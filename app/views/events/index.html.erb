<h2>
	<%= t(:events) %>
	<% if current_user %>
		<%= link_to image_tag("/images/icons/plus-small.png", :title => "New event", :alt => "+", :border => 0), new_event_path %>
	<% end %>
</h2>

<% for event in @events %>
	<div class="event">
	<% if current_user %>
		<%= render "event_short", :event => event %>
	<% else %>
		<h3><%= link_to event.quick_desc, event %>
	<% end %></h3>
	</div>
<% end %>

<div id="pagination">
	<%= will_paginate @events, :previous_label => "<< #{t(:previous)}", :next_label => "#{t(:next)} >>" %>
</div>