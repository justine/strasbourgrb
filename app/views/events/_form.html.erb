<% form_for @event, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
<div class="left_side">
  <p>
    <%= f.label :title %> :
    <%= f.text_field :title_fr %>
  </p>
	<p>
		<%= f.label :tags %> :
		<%= f.text_field :tag_list %>
	</p>
	<p>
		<%= f.label :location %> :
		<%= f.text_field :location %>
	</p>
	<p>
		<%= f.label :date %> :
		<%= f.datetime_select(:e_date) %>
	</p>
	<p>
		<%= f.label :file %> :
		<%= f.file_field :doc %>
	</p>
	<p>
		<%= f.label :picture %> :
		<%= f.file_field :picture %>
	</p>
</div>
<div class="right_side">
	  <p>
	    <%= f.label :published %> :
	    <%= f.check_box :published %>
	  </p>
</div>
<div class="clear"></div>
  <p>
    <%= f.label :content %> (textile)<br />
    <%= f.text_area :content_fr, :cols => "80" %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
