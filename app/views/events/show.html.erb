<div class="event">
<h2><%= @event.title %></h2>
<h3 class="details"><%= @event.e_date.strftime("%d/%m/%Y %H:%M") %> @ <%= @event.location %></h3>
<ul class="tags">
	<% for tag in @event.tag_list %>
		<li><%= link_to image_tag("/images/icons/tag-label.png", :title => "tag", :alt => nil, :border => 0) + " #{tag}", :action => "index", :tag => tag %></li>
	<% end %>
</ul>
<p class="content">
  <%= @event.content %>
</p>
<p>
	<% if @event.doc.exists? %>
		Fichier : <%= link_to image_tag("/images/icons/document-pdf.png", :title => nil, :alt => nil, :border => 0), @event.doc.url %>
	<% end %>
	<% if current_user %>
		<%= link_to (image_tag @event.picture.url(:thumb)), @event.picture.url, :rel => "lightbox" %>
	<% else %>
		<%= link_to (image_tag @event.picture.url(:medium)), @event.picture.url, :rel => "lightbox" %>
	<% end %>
</p>

</div>