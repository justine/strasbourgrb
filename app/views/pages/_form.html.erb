<% form_for @page do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title_fr %><br />
    <%= f.text_field :title_fr %>
  </p>
  <p>
    <%= f.label :title_en %><br />
    <%= f.text_field :title_en %>
  </p>
  <p>
    <%= f.label :content_fr %><br />
    <%= f.text_area :content_fr %>
  </p>
  <p>
    <%= f.label :content_en %><br />
    <%= f.text_area :content_en %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
