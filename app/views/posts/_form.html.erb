<% form_for @post do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %> :
    <%= f.text_field :title %>
  </p>
	<p>
		<%= f.label :tags %> :
		<%= f.text_field :tag_list %>
	</p>
  <p>
    <%= f.label :content %> (textile)<br />
    <%= f.text_area :content %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
